<v:View x:Class="Cegs12X.Views.Split" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Cegs12X.Views"
    xmlns:wpf="clr-namespace:HACS.WPF;assembly=HACS.WPF"
    xmlns:v="clr-namespace:HACS.WPF.Views;assembly=HACS.WPF"
    mc:Ignorable="d"
    Background="{x:Null}">

     <!-- Breaking convention for aesthetic purposes. This effective width of this chamber should be 33 pixels wide instead of 20. --> 
    <Canvas Width="22" Height="9">
        <Path Canvas.Left="1" Canvas.Top="-12" d:Fill="#2200FFFF" Fill="Transparent"
            Data="m 0,0 h20 v33 h-20 z"
            v:View.Component="Section.Split" AutomationProperties.HelpText="Split section" />

        <Path Style="{DynamicResource FittingShapeStyle}" IsHitTestVisible="False"
              Data="m0.5,0.5 h21 v8 h-21 z" />
    </Canvas>
</v:View>
